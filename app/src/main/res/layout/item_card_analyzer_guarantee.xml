<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pool_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="【限定】"
            android:textColor="?attr/ark_label_general_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ："
            android:textColor="?attr/ark_label_general_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_pool_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="云间清醒梦云间清醒梦云间清醒梦云间清醒梦"
            android:textColor="?attr/ark_label_general_text_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已累计 "
            android:textColor="?attr/ark_label_general_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_guarantee_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 9 "
            android:textColor="?attr/ark_card_analyzer_accent_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 抽未出6星"
            android:textColor="?attr/ark_label_general_text_color"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_marginHorizontal="24dp"
        android:layout_gravity="bottom"
        android:background="?attr/ark_card_analyzer_dash_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</FrameLayout>