<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/openNav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/fragment_nav"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/changeTheme"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/icon_change_theme" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ark_label_hint_text_color_night" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/ark_label_background_color_day"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_card_label1" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_label1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_welcome"
                            android:text="@string/drawer_toolbox_name" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_label2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_label1"
                            android:text="@string/home_card_label2" />

                        <ImageView
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_below="@id/card_label2"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/black" />

                        <ImageView
                            android:id="@+id/card_act_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/linear"
                            android:layout_marginRight="10dp"
                            android:background="@color/ark_label_accent_text_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_title"
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/card_act_icon"
                            android:layout_toRightOf="@id/card_act_icon"
                            android:text="@string/card_act_title"
                            android:textSize="12sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/card_act_icon"
                            android:layout_toRightOf="@id/card_act_icon"
                            android:text="@string/card_act_days" />

                        <ImageView
                            android:id="@+id/card_act_days_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/card_act_days"
                            android:layout_toEndOf="@id/card_act_days"
                            android:background="@color/ark_label_card_background_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/card_act_days_icon"
                            android:layout_toEndOf="@id/card_act_days_icon"
                            android:text="@string/card_act_hours" />

                        <ImageView
                            android:id="@+id/card_act_hours_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/card_act_hours"
                            android:layout_toRightOf="@id/card_act_hours"
                            android:background="@color/ark_label_card_background_color_night" />

                        <ImageView
                            android:id="@+id/card_next_act_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignTop="@id/card_act_icon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/card_act_title"
                            android:background="@color/ark_label_accent_text_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_title"
                            android:layout_width="76dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/card_next_act_icon"
                            android:layout_toRightOf="@id/card_next_act_icon"
                            android:text="@string/card_act_title" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/card_next_act_icon"
                            android:layout_toRightOf="@id/card_next_act_icon"
                            android:text="@string/card_act_days" />

                        <ImageView
                            android:id="@+id/card_next_act_days_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/card_next_act_days"
                            android:layout_toRightOf="@id/card_next_act_days"
                            android:background="@color/ark_label_card_background_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/card_next_act_days_icon"
                            android:layout_toRightOf="@id/card_next_act_days_icon"
                            android:text="@string/card_act_hours" />

                        <ImageView
                            android:id="@+id/card_next_act_hours_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@id/card_next_act_hours"
                            android:layout_toRightOf="@id/card_next_act_hours"
                            android:background="@color/ark_label_card_background_color_night" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="170dp"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:background="@color/ark_label_accent_text_color_night"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/checkbox_bubble"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/checkbox_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="158dp"/>

<!--                <com.google.android.material.checkbox.MaterialCheckBox-->
<!--                    android:id="@+id/checkbox1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:checked="true"-->
<!--                    android:padding="9dp"-->
<!--                    android:text="@string/checkbox_item_1"-->
<!--                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />-->

<!--                <com.google.android.material.checkbox.MaterialCheckBox-->
<!--                    android:id="@+id/checkbox2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/checkbox1"-->
<!--                    android:padding="9dp"-->
<!--                    android:text="@string/checkbox_item_2" />-->

<!--                <com.google.android.material.checkbox.MaterialCheckBox-->
<!--                    android:id="@+id/checkbox3"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/checkbox2"-->
<!--                    android:padding="9dp"-->
<!--                    android:text="@string/checkbox_item_3" />-->
            </RelativeLayout>
        </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/apps_line_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:background="@color/ark_label_accent_text_color_night"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainpage_app_line"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/more_features"
            android:textStyle="bold"/>
    </LinearLayout>
        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/ark_label_accent_text_color_night"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apps_line_1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/ark_label_accent_text_color_night"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apps_line_2"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/ark_label_accent_text_color_night"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apps_line_3"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/ark_label_accent_text_color_night"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apps_line_4"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/derivative_line"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:background="@color/ark_label_accent_text_color_night"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainpage_derivative"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Detailed_features"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>