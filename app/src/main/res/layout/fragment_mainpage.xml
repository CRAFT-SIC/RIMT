<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/openNav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="?attr/fragment_nav"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/changeTheme"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@color/ark_label_accent_text_color_day" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ark_label_tip_text_color_day"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"
                android:background="@color/ark_label_accent_text_color_night">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:padding="9dp"
                    android:text="@string/checkbox_item_1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkbox1"
                    android:padding="9dp"
                    android:text="@string/checkbox_item_2" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkbox2"
                    android:padding="9dp"
                    android:text="@string/checkbox_item_3" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_card_label1" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_label1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_welcome"
                            android:text="@string/drawer_toolbox_name" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_label2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_label1"
                            android:text="@string/home_card_label2" />

                        <ImageView
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_below="@id/card_label2"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/black" />

                        <ImageView
                            android:id="@+id/card_act_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/linear"
                            android:layout_marginRight="10dp"
                            android:background="@color/ark_label_accent_text_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_act_icon"
                            android:layout_alignTop="@id/card_act_icon"
                            android:text="@string/card_act_title"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_act_icon"
                            android:layout_alignBottom="@id/card_act_icon"
                            android:text="@string/card_act_days"/>

                        <ImageView
                            android:id="@+id/card_act_days_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/card_act_days"
                            android:layout_alignTop="@id/card_act_days"
                            android:background="@color/ark_label_card_background_color_night"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_act_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_act_days_icon"
                            android:layout_alignTop="@id/card_act_days_icon"
                            android:text="@string/card_act_hours"/>

                        <ImageView
                            android:id="@+id/card_act_hours_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/card_act_hours"
                            android:layout_alignTop="@id/card_act_hours"
                            android:background="@color/ark_label_card_background_color_night"/>

                        <ImageView
                            android:id="@+id/card_next_act_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_toRightOf="@id/card_act_title"
                            android:layout_alignTop="@id/card_act_icon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/ark_label_accent_text_color_night" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_next_act_icon"
                            android:layout_alignTop="@id/card_next_act_icon"
                            android:text="@string/card_act_title"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_next_act_icon"
                            android:layout_alignBottom="@id/card_next_act_icon"
                            android:text="@string/card_act_days"/>

                        <ImageView
                            android:id="@+id/card_next_act_days_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/card_next_act_days"
                            android:layout_alignTop="@id/card_next_act_days"
                            android:background="@color/ark_label_card_background_color_night"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/card_next_act_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/card_next_act_days_icon"
                            android:layout_alignTop="@id/card_next_act_days_icon"
                            android:text="@string/card_act_hours"/>

                        <ImageView
                            android:id="@+id/card_next_act_hours_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/card_next_act_hours"
                            android:layout_alignTop="@id/card_next_act_hours"
                            android:background="@color/ark_label_card_background_color_night"/>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>