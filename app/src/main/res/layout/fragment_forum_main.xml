<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/shanghai_app_barlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--CollapsingToolbarLayout可以折叠的布局
            app:layout_scrollFlags="scroll" 如果不滑动会一直停在屏幕中间
            -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/shanghai_collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|snap|enterAlways|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.6">

                    <com.zhpan.bannerview.BannerViewPager
                        android:id="@+id/banner_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="375:137"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/banner_view">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                app:cardBackgroundColor="?attr/ark_label_divider_color"
                                app:cardCornerRadius="3dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="6dp"
                                    android:text="本版版主"
                                    android:textColor="?attr/ark_label_general_text_color"
                                    android:textSize="10sp" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_moderator_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="-"
                                android:textColor="?attr/ark_label_general_text_color"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                app:dividerColor="?attr/ark_label_divider_color" />

                            <TextView
                                android:id="@+id/tv_post_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用户  0K "
                                android:textSize="10sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <com.suntend.arktoolbox.widgets.ShapeView
                                android:id="@+id/tv_sign_in"
                                android:layout_width="65dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="22dp"
                                android:drawableLeft="@mipmap/icon_forum_location"
                                android:gravity="center"
                                android:paddingLeft="11dp"
                                android:paddingRight="11dp"
                                android:text="签到"
                                android:textColor="#ffffffff"
                                android:textSize="10sp"
                                app:cornesRadius="22dp"
                                app:solidColor="#FF1A1A1A" />

                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginHorizontal="14dp"
                            app:dividerColor="?attr/ark_label_divider_color" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--app:layout_collapseMode="pin" 可以停留在屏幕上面的，不会折叠-->
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <FrameLayout
                    android:layout_width="78dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp">

                    <com.suntend.arktoolbox.widgets.ShapeView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cornesRadius="10dp"
                        app:solidColor="#FFE8E8E8" />

                    <com.suntend.arktoolbox.widgets.ShapeView
                        android:id="@+id/spv_sort_now"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="最新"
                        android:textColor="#ffffffff"
                        android:textSize="10sp"
                        app:cornesRadius="10dp"
                        app:solidColor="@color/ark_forum_accent_text_color" />

                    <com.suntend.arktoolbox.widgets.ShapeView
                        android:id="@+id/spv_sort_hot"
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="最热"
                        android:textSize="10sp"
                        app:cornesRadius="10dp"
                        app:solidColor="@color/transparent" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="8dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp"
                    android:src="@mipmap/icon_forum_search" />

                <com.suntend.arktoolbox.widgets.ShapeView
                    android:id="@+id/spv_page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="1dp"
                    android:text="明日方舟"
                    android:textColor="?attr/ark_label_general_text_color"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:cornesRadius="5dp"
                    app:solidColor="?attr/ark_label_background_color" />
            </FrameLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@color/transparent" />

        </com.google.android.material.appbar.AppBarLayout>
        <!--嵌套滚动使用-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.suntend.arktoolbox.widgets.ArkLabelAddShadowFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="15dp"
        android:background="#700256FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_float_publish"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/icon_forum_float_send" />
    </com.suntend.arktoolbox.widgets.ArkLabelAddShadowFrameLayout>
    <com.suntend.arktoolbox.widgets.ArkLabelAddShadowFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:layout_marginRight="15dp"
        android:background="#700256FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_float_person"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/icon_forum_float_user" />
    </com.suntend.arktoolbox.widgets.ArkLabelAddShadowFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>